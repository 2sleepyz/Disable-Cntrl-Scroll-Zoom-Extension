{
  "manifest_version": 3,
  "name": "Disable Ctrl+Scroll Zoom",
  "version": "1.1",
  "description": "Blocking Ctrl + Scroll zoom with toggle and whitelist",
  "permissions": ["storage"],

  "icons": {
    "16": "src/icon16.png",
    "96": "src/icon96.png"
  },

  "action": {
    "default_title": "Toggle Ctrl Zoom",
    "default_icon": {
      "16": "src/icon16.png",
      "96": "src/icon96.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
