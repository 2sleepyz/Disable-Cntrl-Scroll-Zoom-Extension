{
  "manifest_version": 3,
  "name": "Disable Ctrl+Scroll Zoom",
  "version": "1.0.0",
  "description": "Prevents Ctrl + mouse wheel and Ctrl + +/-/0 keyboard shortcuts from changing page zoom.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "Disable Ctrl+Scroll Zoom",
    "default_icon": {
      "16": "src/icon16.png",
      "96": "src/icon96.png"
    }
  },
  "icons": {
    "16": "src/icon16.png",
    "96": "src/icon96.png"
  }
}
